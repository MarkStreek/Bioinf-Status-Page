    <context-param>
        <param-name>currentFreeMemory</param-name>
        <param-value>http://monitor:9090/api/v1/query?query=node_memory_MemFree_bytes</param-value>
    </context-param>
    <context-param>
        <param-name>availableMemory</param-name>
        <param-value>http://monitor:9090/api/v1/query?query=node_memory_MemAvailable_bytes</param-value>
